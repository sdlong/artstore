
<h2> 修改產品 </h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="form-group">
    <%= f.input :title %>
  </div>

  <div class="form-group">
    <%= f.input :description %>
  </div>

  <div class="form-group">
    <%= f.input :quantity %>
  </div>

  <div class="form-group">
    <%= f.input :price %>
  </div>

  <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submitting..." } %>

<% end %>
