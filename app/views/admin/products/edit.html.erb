
<h2><i class="fa fa-cog"></i>修改商品</h2>
<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
 <%= f.cktext_area :description, :cols => 40 %>
  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>

  <div class="form-group">
    <%= f.simple_fields_for :photo do |c| %>
      <%= c.input :image, as: :file %>
    <% end %>
  </div>

  <%= f.submit "Submit",class: "btn btn-primary", data: { disable_with: "Submitting..." } %>

<% end %>
